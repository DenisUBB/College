<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_icon_student_item_data_student_recycler_view_activity_main"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/icon_data_student_recycler_view_activity_main"
        android:src="@drawable/ic_account_circle_pink_24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />


    <Button
        android:id="@+id/button_delete_item_data_student_recycler_view_activity_main"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_below="@+id/image_view_icon_student_item_data_student_recycler_view_activity_main"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/background_button_corner_transparent_grey"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="10dp"
        android:text="@string/button_delete"
        android:textAllCaps="false"
        android:textColor="#F44336"
        app:layout_constraintBottom_toBottomOf="@+id/button_edit_item_data_student_recycler_view_activity_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983" />

    <Button
        android:id="@+id/button_edit_item_data_student_recycler_view_activity_main"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_below="@+id/image_view_icon_student_item_data_student_recycler_view_activity_main"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/button_delete_item_data_student_recycler_view_activity_main"
        android:layout_toLeftOf="@+id/button_delete_item_data_student_recycler_view_activity_main"
        android:background="@drawable/background_button_corner_transparent_grey"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="10dp"
        android:text="@string/button_edit"
        android:textAllCaps="false"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toStartOf="@+id/button_delete_item_data_student_recycler_view_activity_main"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_view_icon_student_item_data_student_recycler_view_activity_main"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/position_textview"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/name_textView"
        app:layout_constraintTop_toBottomOf="@+id/name_textView" />
</android.support.constraint.ConstraintLayout>